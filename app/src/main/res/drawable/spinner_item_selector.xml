<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna apabila item ditekan atau dipilih (Contoh: Hijau lembut) -->
    <item android:state_activated="true" android:drawable="@color/selected_green" />
    <item android:state_pressed="true" android:drawable="@color/selected_green" />

    <!-- Warna asal apabila tidak ditekan (Putih) -->
    <item android:drawable="@android:color/transparent" />
</selector>