<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Edit Task Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2563EB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"/>

    <!-- FIELD UNTUK NAMA MANAGER (created_task_by) -->
    <TextView
        android:text="Manager In-Charge:"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/editCreatedBy"
        android:hint="Manager Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/edit_text"/>

    <!-- FIELD UNTUK TAJUK -->
    <TextView
        android:text="Task Title:"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/editT"
        android:hint="Update Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"/>

    <!-- FIELD UNTUK DESKRIPSI -->
    <TextView
        android:text="Description:"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/editD"
        android:hint="Update Description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"/>

    <!-- NEW FIELD: FINISH DEADLINE (This fixes your error) -->
    <TextView
        android:text="Finish Deadline:"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/editFinishDate"
        android:hint="Select Deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="true"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:drawableEnd="@android:drawable/ic_menu_myplaces"/>

    <!-- FIELD UNTUK STAFF -->
    <TextView
        android:text="Re-assign Staff:"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/editSp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnSaveEdit"
        android:text="SAVE CHANGES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2563EB"
        android:textColor="#FFFFFF"/>
</LinearLayout>