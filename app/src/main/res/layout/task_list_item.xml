<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- HEADER SECTION: TITLE & STATUS -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/tvStatus"
                android:fontFamily="sans-serif-black"
                android:text="Task Title"
                android:textColor="#1E293B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@android:color/holo_blue_light"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="PENDING"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textAllCaps="true" />
        </RelativeLayout>

        <!-- DESCRIPTION -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:text="Task details description goes here..."
            android:textColor="#475569"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F5F9"
            android:layout_marginBottom="12dp"/>

        <!-- INFO SECTION (Simplified for Staff) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- COLUMN 1: ASSIGNED BY -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASSIGNED BY"
                    android:textSize="10sp"
                    android:textColor="#94A3B8"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/tvCreatedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manager Name"
                    android:textColor="#1E293B"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- COLUMN 2: DEADLINE (Date Finished) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEADLINE"
                    android:textSize="10sp"
                    android:textColor="#94A3B8"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/tvFinishDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dd/MM/yyyy"
                    android:textColor="#E11D48"
                    android:textSize="13sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ACTION BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnItemUpdate"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="UPDATE STATUS"
            android:textColor="#0D47A1"
            card_view:strokeColor="#0D47A1"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>