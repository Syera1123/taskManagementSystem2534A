<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taskmanagementsystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskManagementSystem">

        <!-- LOGIN PAGE -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MANAGER DASHBOARD -->
        <activity android:name=".ManagerDashboardActivity" android:exported="false" />
        <activity android:name=".ManageTaskActivity" android:exported="false" />
        <activity android:name=".ReportActivity" android:exported="false" />
        <activity android:name=".ViewEmployeesActivity" android:exported="false" />

        <!-- STAFF / EMPLOYEE PAGES (ADD THESE TWO) -->
        <activity
            android:name=".EmployeeTaskActivity"
            android:exported="false"
            android:label="My Tasks" />

        <activity
            android:name=".TaskDetailsActivity"
            android:exported="false"
            android:label="Task Details" />

    </application>
</manifest>